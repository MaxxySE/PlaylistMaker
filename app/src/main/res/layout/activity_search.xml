<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView style="@style/BackButton"
                android:id="@+id/back_btn"
                app:srcCompat="@drawable/back" />

            <TextView style="@style/Title"
                android:text="@string/search_title" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/settings_icon_size">

            <EditText style="@style/EditText"
                android:id="@+id/search_edittext"
                android:drawableStart="@drawable/search"
                android:hint="@string/search_title"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                />

            <ImageView style="@style/EditTextRightBtn"
                android:id="@+id/clear_btn"
                app:srcCompat="@drawable/clear_button"/>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>

    <LinearLayout style="@style/PlaceholderLayout"
        android:id="@+id/not_found_view">

        <ImageView style="@style/NotFoundImage"/>

        <TextView style="@style/PlaceholderText"
            android:text="@string/not_found_text"/>

    </LinearLayout>

    <LinearLayout style="@style/PlaceholderLayout"
        android:id="@+id/no_service_view">

        <ImageView style="@style/NoServiceImage"/>

        <TextView style="@style/PlaceholderText"
            android:text="@string/no_service_text"/>

        <Button style="@style/NoServiceButton"
            android:id="@+id/update_btn"
            android:text="@string/update" />

    </LinearLayout>

    <LinearLayout style="@style/PlaceholderLayout"
        android:id="@+id/progress_bar">

        <ProgressBar
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/progress_bar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tack_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp108"
        android:visibility="gone">

        <TextView style="@style/PlaceholderText"
            android:layout_weight="0.01"
            android:text="@string/search_history_text"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:paddingTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp16"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <Button style="@style/NoServiceButton"
            android:id="@+id/clear_track_history"
            android:layout_weight="0.01"
            android:text="@string/search_history_button" />

    </LinearLayout>

</FrameLayout>