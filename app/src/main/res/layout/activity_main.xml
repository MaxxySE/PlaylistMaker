<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".MainActivity"
    android:padding="@dimen/layout_padding"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/big_text_size"
        android:textColor="?attr/colorOnPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/top_bottom_padding"
        android:paddingBottom="@dimen/top_bottom_padding"
        android:orientation="vertical">

        <Button style="@style/MainScreenButton"
            android:id="@+id/search_btn"
            android:layout_marginBottom="@dimen/button_padding"
            android:text="@string/search"
            app:icon="@drawable/search" />

        <Button style="@style/MainScreenButton"
            android:id="@+id/library_btn"
            android:layout_marginBottom="@dimen/button_padding"
            android:layout_marginTop="@dimen/button_padding"
            android:text="@string/library"
            app:icon="@drawable/library" />

        <Button style="@style/MainScreenButton"
            android:id="@+id/settings_btn"
            android:layout_marginTop="@dimen/button_padding"
            android:text="@string/settings"
            app:icon="@drawable/settings"
            />

    </LinearLayout>


</LinearLayout>